<div class="card" style="width: 18rem;">
  <div class="card-header bg-info text-white">
    Attendees
  </div>
  <% if event.attendees %>
    <ul class="list-group list-group-flush">
      <% event.attendees.each do |attendee| %>
        <li class="list-group-item bg-warning"><%= attendee.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>